<div class="my-2">
  <div class="container">
    <% if user_signed_in? %>
      <p> Welcome <%=current_user.name %></p>
      <%= button_to "Sign out", destroy_user_session_path, :method => :delete  %>
    <% else %>
      <%= button_to 'Log In', "/users/sign_in" %>
    <% end %>
    <% if @users.empty?  ||  @users.nil? %>
      <p> There are no users </p>
    <%end%>
  </div>
</div>

<div class="container">
  <div>
    <h3> list all users </h3>
    <% @users.each do |user|%>
      <a href="/users/<%= user.id %>">
      <div class="card my-3">
        <div class="card-body row">
          <div class="col-2">
            <%= image_tag image_url('https://www.kindpng.com/picc/m/136-1369892_avatar-people-person-business-user-man-character-avatar.png'),
                          :class => "img-thumbnail sm"  %>
          </div>
          <div class="col-10">
            <div class="d-flex justify-content-between">
              <h1> <%= user.name %> </h1>
              <small class="align-self-end"> Number of posts: <% user.post_counter || 0 %> </small>
            </div>
          </div>
        </div>
      </div>
    </a>
    <% end %>
  </div>
</div>